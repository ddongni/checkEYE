<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/checkColorMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="색맹 테스트 - 스크롤을 내려서 확인하세요."
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/ishihara_1"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="정상적인 색각을 가진 사람들과 색맹이 있는 사람들 모두에게 12로 보입니다."
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/ishihara_13"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="정상적인 색각을 가진 사람들은 6으로 읽습니다."
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/ishihara_23"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:text="정상적인 색각을 가진 사람들은 42로 읽습니다."
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/ishihara_29"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:text="적록 색맹이 있는 사람들은 선을 그을 수 있지만 정상적인 색각을 가진 사람들은 선을 그을 수 없습니다."
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>